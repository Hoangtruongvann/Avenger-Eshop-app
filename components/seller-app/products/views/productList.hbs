<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">

                        <form class="navbar-search navbar-search-light form-inline mr-sm-3" id="navbar-search-main" method="GET" action = "/seller/products">
                            <div class="form-group mb-0">
                                <div class="input-group input-group-alternative input-group-merge">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                                    </div>
                                    <input class="form-control" placeholder="Tìm kiếm" type="text" name ="search-name">
                                </div>
                            </div>
                            <button type="summit" class="close"  aria-label="Close" value="summit">
                                <span aria-hidden="true">×</span>
                            </button>
                        </form>
                    </nav>

                </div>

                <div class="col-lg-6 col-5 text-right">
                    <a href="/seller/products/add" class="btn btn-md btn-neutral">Thêm</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row justify-content-center">
        <div class=" col ">
            <div class="card">
                <div class="card-header bg-transparent">
                    <h3 class="mb-0">Sản phẩm</h3>
                </div>
                <div class="card-body">
                    <div class="container">
                       
                        <div class="row icon-examples product-tittle">
                              {{#if products}}
                            <div class="col-1">
                            </div>
                            <div class="col-4">
                                <h5> Tên sản phẩm</h5>
                            </div>
                            <div class="col-2">
                                <h5> Hãng</h5>
                            </div>
                            <div class="col-2">
                                <h5>Loại</h5>
                            </div>
                            <div class="col-2">
                                <h5>Giá</h5>
                            </div>
                            <div class="col-1">

                            </div>
                        </div>
                    </div>
                   
                    <div class="row icon-examples">
                      {{#each products}}
                        <div class="col-lg-12">
                              
                            <button type="button" class="btn-icon-clipboard" data-clipboard-text="active-40">
                                <div class="row">
                                    <div class="col-1 product-if">
                                        <img src="{{'images.image_link'}}" alt="">
                                    </div>
                                    <div class="col-4">
                                        <h5>{{product_name}}</h5>
                                    </div>
                                    <div class="col-2">
                                        <h5> {{'brand.brand_name'}}</h5>
                                    </div>
                                    <div class="col-2">
                                        <h5>{{'category.category_name'}}</h5>
                                    </div>
                                    <div class="col-2">
                                        <h5>{{price }}</h5>
                                    </div>
                                    <div class="col-1 p-btn">
                                        <div class="row">
                                            <div class="col-6" style="margin-top:2px">
                                                <form action="/seller/products/delete" method="POST" id="delete-form">
                                                    <input type="hidden" name="id" value="{{product_id}}">
                                                    <a href="#" class="delete-btn"
                                                        onclick="document.getElementById('delete-form').submit()"><i
                                                            class="fas fa-trash"></i></a>
                                                </form>
                                            </div>
                                            <div class="col-6">
                                                <a href="/seller/products/edit/{{product_id}}"><i
                                                        class="fas fa-edit"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </button>
                        </div>
                        {{/each}}

                    </div>
                    <div>
                        <ul class="pagination modal-1" style="margin-left:45%">
                            <li><a href="#" class="prev">&laquo</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#" class="next">&raquo;</a></li>
                        </ul>
                    </div>
        
                </div>
                {{else}}
                <h1 >Thêm sản phẩm và bắt đầu kinh doanh ngay bây giờ!</h1>
                {{/if}}
            </div>
        </div>
    </div>
</div>
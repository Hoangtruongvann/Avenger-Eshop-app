<div class="header pb-6 d-flex align-items-center" style="min-height: 500px; ">
    <!-- Page content -->
    <div class="col-xl-12 order-xl-1">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Chỉnh sửa sản phẩm </h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="POST" action="/seller/products" id="add-product">
                    <h6 class="heading-small text-muted mb-4">Thông tin sản phẩm</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="product_name">Tên sản phẩm</label>
                                    <input type="text" id="product_name" name="product_name" class="form-control"
                                        placeholder="Tên sản phẩm" value="" required="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="category" class="category">Chọn loại sản phẩm</label>
                                    <select id="category" name="category" class="form-control">
                                        <option value="volvo">Thời trang</option>
                                        <option value="saab">Thực phẩm</option>
                                        <option value="opel">Gia dụng</option>
                                        <option value="audi">Điện tử</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="product_price">Giá</label>
                                    <input type="text" id="product_price" name="product_price" class="form-control"
                                        placeholder="Giá sản phẩm" value="" required="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="brand" class="form-control-label">Chọn hãng sản phẩm</label>
                                    <select id="brand" name="brand" class="form-control">
                                        <option value="volvo">Volvo</option>
                                        <option value="saab">Saab</option>
                                        <option value="opel">Opel</option>
                                        <option value="audi">Audi</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="product_quantity">Số lượng</label>
                                    <input type="text" id="product_quantity" name="product_quantity"
                                        class="form-control" placeholder="Số lượng sản phẩm" value="" required="">
                                </div>
                            </div>
                        </div>
                        <hr class="my-4">
                        <!-- Description -->
                        <h6 class="heading-small text-muted mb-4">Hình ảnh</h6>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <div class="file-field">
                                            <div class="z-depth-1-half mb-4">
                                                <img src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg"
                                                    class="img-fluid" alt="example placeholder">
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <div class="btn btn-mdb-color btn-rounded float-left">
                                                    <label class="form-control-label" for="product_img1">Hình ảnh
                                                        2</label>
                                                    <input type="file" name="product_img1" id="product_img1">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <div class="file-field">
                                            <div class="z-depth-1-half mb-4">
                                                <img src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg"
                                                    class="img-fluid" alt="example placeholder">
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <div class="btn btn-mdb-color btn-rounded float-left">
                                                    <label class="form-control-label" for="product_img2">Hình ảnh
                                                        2</label>
                                                    <input type="file" name="product_img2" id="product_img2">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <div class="file-field">
                                            <div class="z-depth-1-half mb-4">
                                                <img src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg"
                                                    class="img-fluid" alt="example placeholder">
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <div class="btn btn-mdb-color btn-rounded float-left">
                                                    <label class="form-control-label" for="product_img3">Hình ảnh
                                                        2</label>
                                                    <input type="file" name="product_img3" id="product_img3">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <hr class="my-4">
                        <!-- Description -->
                        <h6 class="heading-small text-muted mb-4">Mô tả</h6>
                        <div class="pl-lg-4">
                            <div class="form-group">
                                <label class="form-control-label">Mô tả sản phẩm</label>
                                <textarea rows="4" class="form-control"
                                    placeholder="Vài mô tả cho sản phẩm của bạn ..."></textarea>
                            </div>
                             <span "text-right" style = "float: right;">
                                <button class="btn btn-sm btn-primary" type="submit" value="submit"
                                    style="font-size: 18px;" form="add-product">Xác nhận</button>
                            </span>
                             <span "text-right" style = "float:right; margin-right: 10px;">
                                <a class="btn btn-sm btn-warning" style="font-size: 18px;" form="add-product">Quay lại</a>
                            </span>
                        </div>
                    </div>
            </div>
        </div>
        </form>
    </div>
</div>
</div>
</div>
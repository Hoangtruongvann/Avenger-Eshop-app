<div class="header pb-6 d-flex align-items-center edit-form" style="min-height: 500px; ">
    <!-- Page content -->
    <div class="col-xl-12 order-xl-1">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Chỉnh sửa sản phẩm </h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                {{#with product}}
                <form method="POST" action="/seller/products/update" id="edit-product" enctype="multipart/form-data">
                    <h6 class="heading-small text-muted mb-4">Thông tin sản phẩm</h6>
                    <input type="hidden" name="id" value={{product_id}}>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="name">Tên sản phẩm</label>
                                    <input type="text" id="name" name="name" class="form-control"
                                        placeholder="Tên sản phẩm" value="{{product_name}}" required="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="category" class="category">Chọn loại sản phẩm</label>
                                    <input type="text" id="category" name="category" class="form-control"
                                        placeholder="Loại sản phẩm" value="{{'category.category_name'}}" required="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="price">Giá</label>
                                    <input type="text" id="price" name="price" class="form-control"
                                        placeholder="Giá sản phẩm" value="{{price}}" required="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="brand" class="form-control-label">Chọn hãng sản phẩm</label>
                                    <input type="text" id="brand" name="brand" class="form-control"
                                        placeholder="Hãng sản xuất" value="{{'brand.brand_name'}}" required="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="model_year">Năm sản xuất</label>
                                    <input type="text" id="model_year" name="model_year" class="form-control"
                                        placeholder="Năm sản xuất" value="{{model_year}}" required="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="quantity">Số lượng</label>
                                    <input type="text" id="quantity" name="quantity" class="form-control"
                                        placeholder="Số lượng sản phẩm" value="{{quantity}}" required="">
                                </div>
                            </div>
                        </div>
                        {{/with}}
                        <hr class="my-4">
                        <!-- Description -->
                        <h6 class="heading-small text-muted mb-4">Hình ảnh</h6>
                        <div class="pl-lg-4">
                            <div class="row">
                                {{#each images}}
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <div class="file-field">
                                            <div class="z-depth-1-half mb-4">
                                                <img src="{{image_link}}" class="img-fluid" alt="example placeholder"
                                                    id="img{{image_stt}}">
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <div class="btn btn-mdb-color btn-rounded float-left">
                                                    <label class="form-control-label"
                                                        for="product_img{{image_stt}}">Hình ảnh
                                                        {{image_stt}}</label>
                                                    <input type="file" id="product_img{{image_stt}}"
                                                        style="display:none;" name="product_img{{image_stt}}"
                                                        onChange="preview(this,{{image_stt}})" />
                                                    <button class="btn-primary" type="button"
                                                        onclick="document.getElementById('product_img{{image_stt}}').click();">Browse</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                        {{#with product}}
                        <hr class="my-4">
                        <!-- Description -->
                        <h6 class="heading-small text-muted mb-4">Mô tả</h6>
                        <div class="pl-lg-4">
                            <div class="form-group">
                                <label class="form-control-label">Mô tả sản phẩm</label>
                                 <input type="text" id="descriptions" name="descriptions" class="form-control"
                                        placeholder="Vài mô tả về sản phẩm..." value="{{descriptions}}">
                            </div>
                            <span "text-right" style="float: right;">
                                <button class="btn btn-sm btn-primary" type="submit" value="submit"
                                    style="font-size: 18px;" form="edit-product">Xác nhận</button>
                            </span>
                            <span "text-right" style="float:right; margin-right: 10px;">
                                <a class="btn btn-sm btn-warning" style="font-size: 18px;" href="/seller/products">Quay
                                    lại</a>
                            </span>
                        </div>
                    </div>
                    {{/with}}

                </form>


            </div>

        </div>
    </div>
</div>

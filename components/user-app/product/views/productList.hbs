<!-- Hero Section Begin -->
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hero__search row">
                    <div class="search_result2">
                        
                    </div>
                    <div class="hero__search__form col-md-8">
                        <form action="/products/search" method="get">
                            <input id="search_input2" name="key" type="text" placeholder="Sản phẩm bạn tìm kiếm là ? ">
                            <button type="submit" class="site-btn">Tìm kiếm</button>
                        </form>
                    </div>
                    <div class="col-2"></div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>hỗ trợ 24/7</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/userRole/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Avenger</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Trang chủ&nbsp;&nbsp;</a>
                        <span>Mua sắm</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->


<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large" src={{images.[0].image_link}} alt="">
                    </div>
                    <div class="product__details__pic__slider owl-carousel">
                        {{#each images}}
                        <img data-imgbigurl={{image_link}} src={{image_link}} alt="">
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>{{product.product_name}}</h3>
                    <div class="product__details__rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                        <span>(18 nhận xét)</span>
                    </div>
                    <div class="product__details__price">{{product.price}} vnđ</div>
                    <p>{{product.descriptions}}</p>
                    {{!-- <div class="product__details__quantity">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                    </div> --}}
                    <a href="#" data-id="{{product.product_id}}" class="primary-btn addToCart">Thêm vào giỏ hàng</a>
                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                    <ul class="ul_detail">
                        <li><b>Hãng</b> <span>{{product.[brand.brand_name]}}</span></li>
                        <li><b>Khả dụng</b>
                            {{#if product.isAvailable}}
                            <span>còn hàng</span>
                            {{else}}
                            <span>hết hàng</span>
                            {{/if}}
                        </li>

                        <li><b>Thời gian giao</b> <span>Trong khu vực mất 1 ngày, toàn quốc mất 3 ngày</span></li>
                        <li><b>Chia sẻ</b>
                            <div class="share">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                                aria-selected="true">Mô tả chi tiết</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab" aria-selected="false">Thông
                                tin shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab" aria-selected="false">Nhận
                                xét <span>(1)</span></a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Thông tin sản phẩm</h6>
                                <p>{{product.descriptions}}</p>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <div class="product__details__text">
                                    <h6>Thông tin cửa hàng</h6>
                                    <ul>
                                        <li><b>Tên cửa hàng</b> <span>{{shop.shop_name}}</span></li>
                                        <li><b>Địa chỉ email</b> <span>{{shop.shop_email}}</span></li>
                                        <li><b>Số điện thoại</b> <span>{{shop.shop_phone}}</span></li>
                                        <li><b>Địa chỉ shop</b> <span>{{shop.address}}</span></li>
                                        <li><b>Mô tả</b> <span>{{shop.descriptions}}</span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-3" role="tabpanel">
                            <form id="form-review" method="post">
                                <div class="product__details__tab__desc">
                                    <h6>Nhận xét</h6>
                                    <div style="display: flex;">
                                        <div id="rating">
                                            <input type="radio" id="star5" name="rating" value="5" />
                                            <label class="full" for="star5" title="Awesome - 5 stars"></label>

                                            <input type="radio" id="star4" name="rating" value="4" />
                                            <label class="full" for="star4" title="Pretty good - 4 stars"></label>

                                            <input type="radio" id="star3" name="rating" value="3" />
                                            <label class="full" for="star3" title="Meh - 3 stars"></label>

                                            <input type="radio" id="star2" name="rating" value="2" />
                                            <label class="full" for="star2" title="Kinda bad - 2 stars"></label>

                                            <input type="radio" id="star1" name="rating" value="1" />
                                            <label class="full" for="star1" title="Sucks big time - 1 star"></label>
                                        </div>
                                    </div>

                                    <div class="review">
                                        {{#if user}}
                                        <input type="hidden" id="check-user" value="1">
                                        {{else}}
                                        <input type="hidden" id="check-user" value="0">
                                        {{/if}}

                                        {{#with user}}
                                        <img src={{avatar}} alt="avatar" class="avatar-review">
                                        <span> {{firstname}} {{lastname}}</span>
                                        {{/with}}
                                        <div class="row">
                                            <div class="col-7 input-review">
                                                <input type="text" placeholder="nhận xét" style="width: 100%"
                                                    name="content_review">
                                            </div>
                                            <div class="col-5">
                                                <button type="button" class="btn-submit-review"
                                                    onclick="errorMessage()">Gửi</button>
                                            </div>
                                        </div>
                                        <div id="error" class="error-reivew"></div>
                                    </div>
                                    <h6>Danh sách nhận xét</h6>
                                    {{#each reviews}}
                                    <div class="review">
                                        <div class="row">
                                            <div class="col-4">
                                                <img src={{'user.avatar'}} alt="avatar" class="avatar-review">
                                                <span> {{'user.firstname'}} {{'user.lastname'}}</span>
                                            </div>
                                            <div class="col-8">
                                                {{#ifCond rating '==' 1}}
                                                <div class="rating-custom">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                                {{/ifCond}}
                                                {{#ifCond rating '==' 2}}
                                                <div class="rating-custom">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                                {{/ifCond}}
                                                {{#ifCond rating '==' 3}}
                                                <div class="rating-custom">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                                {{/ifCond}}
                                                {{#ifCond rating '==' 4}}
                                                <div class="rating-custom">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </div>
                                                {{/ifCond}}
                                                {{#ifCond rating '==' 5}}
                                                <div class="rating-custom">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </div>
                                                {{/ifCond}}
                                                <p style="font-size: 18px;">{{review}}</p>
                                                <span>Ngày nhận xét: {{created_at}}</span>
                                            </div>

                                        </div>
                                        <hr>
                                    </div>
                                    {{/each}}
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
<!-- Product Details Section End -->

<!-- Related Product Section Begin -->
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Related Product</h2>
                </div>
            </div>
        </div>
        <div class="row">
            {{#each relatedProducts}}
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg={{'images.image_link'}}>
                        <ul class="product__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text">
                        <h6><a href="/products/detail/{{product_id}}">{{product_name}}</a></h6>
                        <h5>{{price}} vnđ</h5>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<script src="/userRole/js/review.js"></script>
<!-- Related Product Section End -->